<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash application theme. -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/transparent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/transparent</item>
    </style>

    <!-- Base application theme.-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="Header" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TitleWhite" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/transparentPrimary</item>
    </style>

    <style name="Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BodySecondary" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/transparentPrimary</item>
    </style>

    <style name="BodyWhite" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Hint" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/transparentPrimary</item>
    </style>

    <style name="Chip" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/chip_selected</item>
    </style>

    <style name="AccentBtn" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/BodyWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_accent_btn_ripple</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="AccentBigBtn" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TitleWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_accent_btn_ripple</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="TextBtn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/Title</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:background">@drawable/bg_transparent_btn_ripple</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="BottomsheetDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <!--<item name="android:windowIsFloating">false</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <!--<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <style name="TIL" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/transparentWhite</item>
    </style>
</resources>
